<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/pisadaCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pisadaConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inicioLlegadaTextView"
            android:text="Incio"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fuerzaImageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_arrow_downward_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/fuerzaTextView"
            android:textSize="12sp"
            android:text="Fuerza: 120.3 N"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/fuerzaImageView"
            app:layout_constraintTop_toTopOf="@id/fuerzaImageView"
            android:visibility="visible"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tiempoImageView"
            app:srcCompat="@drawable/ic_time"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fuerzaImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tiempoTextView"
            android:textSize="12sp"
            android:text="Tiempo: 800.23 ms"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/tiempoImageView"
            app:layout_constraintTop_toTopOf="@id/tiempoImageView"
            android:visibility="visible"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>