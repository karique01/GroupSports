<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">
    
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cardConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/categoryImageView"
            android:src="@mipmap/ic_launcher"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/categoryNameTextView"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/categoryImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/default_margin"/>
        <TextView
            android:id="@+id/startAgeTextView"
            android:text="Edad Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            app:layout_constraintTop_toBottomOf="@id/categoryNameTextView"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/categoryImageView"/>
        <TextView
            android:id="@+id/guionTextView"
            android:text=" - "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/categoryNameTextView"
            app:layout_constraintStart_toEndOf="@id/startAgeTextView"
            android:layout_margin="@dimen/default_margin"/>
        <TextView
            android:id="@+id/endAgeTextView"
            android:text="Edad Fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            app:layout_constraintTop_toBottomOf="@id/categoryNameTextView"
            app:layout_constraintStart_toEndOf="@id/guionTextView"
            android:layout_margin="@dimen/default_margin"/>

    </android.support.constraint.ConstraintLayout>
    
</android.support.v7.widget.CardView>