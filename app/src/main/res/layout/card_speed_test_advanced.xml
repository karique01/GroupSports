<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/speedTestAdvancedCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="@dimen/default_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pisadaConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/velocidadPromedioImageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/run_fast_sta"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/velocidadPromedioTextView"
            android:textSize="12sp"
            android:text="Velocidad promedio (m/s): 0.5"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/velocidadPromedioImageView"
            app:layout_constraintTop_toTopOf="@id/velocidadPromedioImageView"
            android:visibility="visible"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tiempoImageView"
            app:srcCompat="@drawable/ic_time"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/velocidadPromedioImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tiempoTextView"
            android:textSize="12sp"
            android:text="Tiempo: 800.23 ms"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/tiempoImageView"
            app:layout_constraintTop_toTopOf="@id/tiempoImageView"
            android:visibility="visible"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pisadaDerechasSTAAppCompatImageView"
            app:srcCompat="@drawable/shoe_print_sta"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:tint="@color/colorAccent"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintEnd_toStartOf="@id/pisadasDerechasValueTextView"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/pisadasDerechasValueTextView"
            android:text="PD: 9"
            android:textSize="12sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pisadaIzquierdasSTAAppCompatImageView"
            app:srcCompat="@drawable/shoe_print_sta"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:tint="@color/colorAccent"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@id/pisadasIzquierdasValueTextView"
            app:layout_constraintTop_toBottomOf="@id/pisadaDerechasSTAAppCompatImageView"/>

        <TextView
            android:id="@+id/pisadasIzquierdasValueTextView"
            android:text="PI: 9"
            android:textSize="12sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pisadaIzquierdasSTAAppCompatImageView"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>