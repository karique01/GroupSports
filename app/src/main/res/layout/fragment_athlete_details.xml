<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pe.edu.upc.groupsports.fragments.AthleteDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/weightTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/weightTextInputEditText"
                    android:hint="Peso"
                    android:text="75 kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/heightTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/weightTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/heightTextInputEditText"
                    android:hint="Altura"
                    android:text="1.75 m"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/strenghtTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/heightTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/strenghtTextInputEditText"
                    android:hint="Fuerza activa"
                    android:text="50 N"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/velocityTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/strenghtTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/velocityTextInputEditText"
                    android:hint="Velocidad"
                    android:text="21 m/s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bestVelocityTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/velocityTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/bestVelocityTextInputEditText"
                    android:hint="Mejor tiempo"
                    android:text="14.5 m/s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/largoPiernaTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bestVelocityTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/largoPiernaTextInputEditText"
                    android:hint="Largo pierna"
                    android:text="45 cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pulsoDespertarTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/largoPiernaTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pulsoDespertarTextInputEditText"
                    android:hint="Pulso al despertar"
                    android:text="80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pulsoDespuesEntrenarTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pulsoDespertarTextInputLayout"
                android:layout_margin="@dimen/default_margin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pulsoDespuesEntrenarTextInputEditText"
                    android:hint="Pulso al terminar de entrenar"
                    android:text="80"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>
