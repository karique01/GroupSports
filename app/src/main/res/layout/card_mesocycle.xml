<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp">

    <View
        android:id="@+id/updView"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#aaa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mesocyclePointImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mesocycleCardView"
        android:layout_marginBottom="4dp"/>
    <View
        android:id="@+id/downdView"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/mesocyclePointImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mesocycleCardView"
        android:layout_marginTop="4dp"/>
    <ImageView
        android:id="@+id/mesocyclePointImageView"
        app:srcCompat="@drawable/ic_future_mesocycle"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mesocycleCardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mesocycleCardView"/>
    <android.support.v7.widget.CardView
        android:id="@+id/mesocycleCardView"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mesocyclePointImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mesocycleNameTextView"
                android:text="Mesociclo"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/default_margin"/>
            <TextView
                android:id="@+id/rangeDateTextView"
                android:text="23/07/2018 - 12/08/2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/mesocycleNameTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/default_margin"/>
            <TextView
                android:id="@+id/ciclajeTextView"
                android:text="ciclaje 4:3"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/default_margin"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>