<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.karique.groupsports">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_white"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_white"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pe.edu.karique.groupsports.activities.MainAthleteActivity"
            android:label="@string/athlete"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pe.edu.karique.groupsports.activities.RegisterAthleteActivity"
            android:label="@string/register_athlete"
            android:parentActivityName="pe.edu.karique.groupsports.activities.LoginActivity" />
        <activity android:name="pe.edu.karique.groupsports.activities.SessionHistoryActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.MainCoachActivity"
            android:label="@string/coach"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.AthletesByCategoryActivity"
            android:label="Atletas por categoria"
            android:parentActivityName="pe.edu.karique.groupsports.activities.MainCoachActivity" />
        <activity android:name="pe.edu.karique.groupsports.activities.AddAthleteActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.AddTrainingPlanActivity"
            android:label="@string/add_training_plan"
            android:parentActivityName="pe.edu.karique.groupsports.activities.MainCoachActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.TrainingPlanDetailActivity"
            android:label="Training Plan"
            android:launchMode="singleInstance"
            android:parentActivityName="pe.edu.karique.groupsports.activities.MainCoachActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.MesocycleDetailActivity"
            android:label="Mesocycle"
            android:launchMode="singleInstance"
            android:parentActivityName="pe.edu.karique.groupsports.activities.TrainingPlanDetailActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.WeekDetailActivity"
            android:label="Week"
            android:parentActivityName="pe.edu.karique.groupsports.activities.MesocycleDetailActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.AthleteDetailActivity"
            android:label="@string/title_activity_athlete_detail"
            android:launchMode="singleInstance"
            android:parentActivityName="pe.edu.karique.groupsports.activities.MainCoachActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="pe.edu.karique.groupsports.activities.BinnacleActivity" />
        <activity android:name="pe.edu.karique.groupsports.activities.CoachQuizQuestionsActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.AddQuizActivity"
            android:label="@string/add_quiz"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="pe.edu.karique.groupsports.activities.AthleteQuizQuestionsActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.AthleteReplyQuizActivity"
            android:label="@string/reply_quiz" />
        <activity android:name="pe.edu.karique.groupsports.activities.WeightTestBySessionActivity" />
        <activity android:name="pe.edu.karique.groupsports.activities.ChooseSessionWorkActivity" />
        <activity
            android:name="pe.edu.karique.groupsports.activities.CoachDetailActivity"
            android:label="@string/title_activity_coach_detail"
            android:parentActivityName="pe.edu.karique.groupsports.activities.MainCoachActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="pe.edu.karique.groupsports.activities.CoachCVActivity" />
        <activity android:name="pe.edu.karique.groupsports.activities.AthleteWearableActivity"></activity>
    </application>

</manifest>